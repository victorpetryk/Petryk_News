<?xml version="1.0"?>
<config>
    <modules>
        <Tsg_News>
            <version>0.1.0</version>
        </Tsg_News>
    </modules>
    <global>
        <models>
            <tsg_news>
                <class>Tsg_News_Model</class>
                <resourceModel>tsg_news_resource</resourceModel>
            </tsg_news>
            <tsg_news_resource>
                <class>Tsg_News_Model_Resource</class>
                <entities>
                    <news>
                        <table>tsg_news</table>
                    </news>
                </entities>
            </tsg_news_resource>
        </models>
        <resources>
            <tsg_news_setup>
                <setup>
                    <module>Tsg_News</module>
                </setup>
            </tsg_news_setup>
        </resources>
    </global>
</config>